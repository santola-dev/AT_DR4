@page
@model AT.Pages.CreatePaisDestinoModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Cadastrar País de Destino</h3>

<form method="post">
    <div>
        <label asp-for="Pais.Nome"></label>
        <input asp-for="Pais.Nome" />
        <span asp-validation-for="Pais.Nome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Pais.Codigo"></label>
        <input asp-for="Pais.Codigo" />
        <span asp-validation-for="Pais.Codigo" class="text-danger"></span>
    </div>

    <button type="submit">Cadastrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
    <p style="color: green;">@Model.Mensagem</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
