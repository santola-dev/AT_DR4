@page
@model AT.Delegates_Eventos.DescontoModel;

<h3>Cálculo de Desconto</h3>

<form method="post">
    <div>
        <label>Informe o valor da diária (Em reais):</label>
        <input asp-for="PrecoOriginal" type="number" step="0.01" required />
    </div>
    <button type="submit">Calcular Desconto</button>
</form>

@if (Model.PrecoComDesconto > 0)
{
    <p><strong>Valor com 10% de desconto:</strong> R$ @Model.PrecoComDesconto.ToString("F2")</p>
}
