@page
@model AT.Delegates_Eventos.LoggerModel;

<h3>Registrar Operação do Sistema</h3>

<form method="post">
    <div>
        <label>Mensagem da operação:</label>
        <input asp-for="Mensagem" />
    </div>
    <button type="submit">Registrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Resultado))
{
    <p style="color: green;">@Model.Resultado</p>
}
